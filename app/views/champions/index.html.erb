
    <section class="hero is-fullheight is-default is-bold">
        <div class="hero-body">
            <div class="container has-text-centered">
                <div class="columns is-vcentered">
                    <div class="column is-5">
                        
                        <figure >
                            <%= image_tag('Akali.png', draggable: "false", id: "drag3", alt: "Edit Entry") %>
                        </figure>
                        
                    </div>
                    <div class="column is-6 is-offset-1">
                        <h2> All Champions</h2>

                        <ul class="block-list is-small is-outlined is-success is-centered">
                            <% @champions.each do |champs|%>
                            <li class="block-list is-small is-outlined is-success is-centered"><%= link_to champs.name, champs, class: "block-list is-small is-outlined is-success is-centered"%></li>
                            <%end%>
                        </ul>
                        <%= will_paginate @champions %>

                        
                    </div>
                </div>
            </div>
        </div>

        <div class="hero-foot">
            <div class="container">
                <div class="tabs is-centered">
                    <ul>
                        <li><a>End of Page</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </section>
    

